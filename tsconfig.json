
{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types", "./types"
    ],
    "lib": ["es2015", "es2017", "dom"]
  },
  "exclude": [
    "node_modules"
  ]
}

